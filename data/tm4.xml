<turingmachine name="Move two places to the left" nrtapes="1">
    <blanksymbol>B</blanksymbol>

    <states>
        <st name="q0" initial="true"  />
        <st name="q1"  />
        <st name="q2" halting="true" />
    </states>

    <transitions>
        <tr>
            <current state="q0">
                <tape symbol="B"  />
            </current>
            <next state="q1">
                <tape symbol="B" direction="L"/>
            </next>
        </tr>
        <tr>
            <current state="q1">
                <tape symbol="B"  />
            </current>
            <next state="q2">
                <tape symbol="B" direction="L"/>
            </next>
        </tr>
    </transitions>

    <initialtapes>
        <tape>B</tape>
    </initialtapes>
</turingmachine>



